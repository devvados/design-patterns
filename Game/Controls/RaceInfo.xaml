<UserControl x:Class="Game.RaceInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game"
             mc:Ignorable="d" Height="100" Width="150">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label x:Name="LRaceName" Grid.Row="0"/>
        <ComboBox x:Name="CBTerritories" Grid.Row="1" SelectionChanged="CBTerritories_SelectionChanged"/>
        <Label x:Name="LFactories" Grid.Row="2"/>
    </Grid>
</UserControl>
